{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "baseUrl": ".",
    "lib": [
      "ES5",
      "ES6",
      "DOM",
      "ES2015.Promise",
      "ES2015.Core"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
